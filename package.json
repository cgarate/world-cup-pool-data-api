{
  "name": "world-cup-pool-data-api",
  "version": "1.0.0",
  "description": "Data API for pet project World Cup Pool",
  "main": "index.js",
  "repository": "git@github.com:cgarate/world-cup-pool-data-api.git",
  "author": "Carlos Garate <carlos.m.garate@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn serve",
    "build": "yarn build-ts && yarn tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json --project tsconfig.json",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.120",
    "@types/mongoose": "^5.3.12",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-lint": "^4.5.1",
    "typescript": "^3.3.1"
  }
}
