{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost",
            "es6",
            "esnext.asynciterable"
        ],
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}